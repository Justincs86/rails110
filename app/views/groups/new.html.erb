<div class="col-md-4 col-md-offset-4">
  <h1> New Group </h1>
  <hr>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
    <% end %>
  </ul>
  <% end %>

  Title
  <%= f.text_field :title %>
  <br>
  Descripton
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "Submit", :disable_with => "Submitring...." %>

  <% end %>

</div>
